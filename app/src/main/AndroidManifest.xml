<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wd.utils.sdk">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.StartingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.NetworkReceiverActivity" />

        <activity android:name=".activity.ConnectivityTestActivity" />

        <activity android:name=".activity.ToastTestActivity" />

        <activity android:name=".activity.LogsTestActivity" />
        <activity android:name=".activity.ShareTestActivity" />
        <activity android:name=".activity.EmailValidationActivity" />
        <activity android:name=".activity.CryptographySampleActivity" />
        <activity android:name=".activity.AlertSampleActivity" />
        <activity android:name=".activity.AppFinderActivity" />

    </application>

</manifest>