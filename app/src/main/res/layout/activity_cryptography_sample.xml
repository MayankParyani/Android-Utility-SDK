<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C000000"
    android:scrollbars="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Please enter values to proceed"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/query_encrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/greetings"
            android:layout_marginTop="40dp"
            android:hint="Value to Encrypt"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/result_encrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/query_encrypt"
            android:layout_marginTop="10dp"
            android:hint="Encrypted Result"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/encrypt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_encrypt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Encrypt" />

        <EditText
            android:id="@+id/query_decrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/encrypt_submit"
            android:layout_marginTop="40dp"
            android:hint="Value to Decrypt"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/result_decrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/query_decrypt"
            android:layout_marginTop="10dp"
            android:hint="Decrypted Result"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/decrypt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_decrypt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Decrypt" />

    </RelativeLayout>
</ScrollView>